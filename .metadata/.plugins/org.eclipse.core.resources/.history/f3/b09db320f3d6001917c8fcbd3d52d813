       <integration:annotation-config/>
       <import resource="jms-listener-container-config.xml"/>
   
    <jms:message-driven-channel-adapter id="inRecvJMSAdapater" destination="helloWorldJMSQueue"
        channel="inRecvChannel" connection-factory="connectionFactory" acknowledge="transacted"/>

 <jms:outbound-channel-adapter id="jmsOut" 
                                      channel="outSendJMSAdapter"
                                      connection-factory="connectionFactory" 
                                      destination="helloWorldJMSQueue" 
                                      delivery-persistent="true" ></jms:outbound-channel-adapter>
    <integration:channel id="inRecvChannel"/>
    <integration:channel id="outSendJMSAdapter"/>

    <integration:service-activator id="helloWorldServiceActivator" input-channel="inRecvChannel"
                                   ref="helloWorldAmqService" method="processMsg"/>
